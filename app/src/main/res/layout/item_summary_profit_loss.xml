<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_content">
        <include layout="@layout/include_recycleview_header"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_profit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:text="name"
        android:layout_toLeftOf="@+id/txt_profit_money_pl"
        android:layout_below="@+id/ll_content"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/gray_name"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/txt_profit_close_date_time"
        android:text="+435å††"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/gray_name"
        android:textSize="25sp"
        android:id="@+id/txt_profit_money_pl"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="date time"
        android:layout_marginRight="20dp"
        android:id="@+id/txt_profit_close_date_time"
        android:textColor="@color/gray_name"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ll_content"
        android:layout_alignParentEnd="true"
        android:textSize="11sp"/>

</RelativeLayout>