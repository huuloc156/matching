<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_content_header"
        >
      <include layout="@layout/include_recycleview_header"/>
    </LinearLayout>
    <TextView
          android:id="@+id/txtyname"
          android:layout_width="220dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="60dp"
          android:layout_marginTop="35dp"
          android:layout_alignBottom="@+id/txty_position_pl"
          android:text="Name"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:textColor="@color/gray_name"
          android:textSize="18sp" />

      <TextView
          android:id="@+id/txtystatus"
          android:layout_width="50dp"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_marginLeft="13dp"
          android:layout_marginTop="30dp"
          android:text="status"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:textSize="14sp" />

      <TextView
          android:id="@+id/txtytype"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/txtyname"
          android:layout_alignParentTop="true"
          android:layout_alignStart="@+id/txtyname"
          android:layout_below="@+id/ll_content_header"
          android:layout_marginTop="20dp"
          android:text="type"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:textSize="11sp" />

      <TextView
          android:id="@+id/txtycompanyname"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_toEndOf="@+id/txtytype"
          android:layout_toRightOf="@+id/txtytype"
          android:layout_alignTop="@+id/txtytype"
          android:text="company name"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:textSize="11sp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignParentBottom="true"
          android:layout_marginRight="20dp"
          android:text="+435..."
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:textColor="@color/gray_name"
          android:textSize="25sp"
          android:id="@+id/txty_position_pl"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:text="date time"
          android:layout_marginRight="20dp"
          android:id="@+id/txty_close_date_time"
          android:textColor="@color/gray_name"
          android:layout_alignTop="@+id/txtytype"
          android:layout_alignParentRight="true"
          android:textSize="11sp"/>
</RelativeLayout>