<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                style="@style/text_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_size"
                android:textSize="18sp"
                android:id="@+id/txt_title_fed"/>
        </LinearLayout>
        <include layout="@layout/image_box"/>
        <include layout="@layout/include_like_join"/>


        <TextView
            style="@style/text_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_size"
            android:id="@+id/txt_name_fed"
            android:text="Name" />

        <TextView
            style="@style/text_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_size"
            android:id="@+id/txt_time_fed"
            android:text="Name" />

        <TextView
            style="@style/text_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_size"
            android:id="@+id/txt_num_people_fed"
            android:text="Name"/>

        <TextView
            style="@style/text_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/txt_description_fed"
            android:text="Name"/>

    </LinearLayout>
</ScrollView>