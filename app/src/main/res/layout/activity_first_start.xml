<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="20dp"
        android:src="@mipmap/test_first_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:text="あなたの投資の総合情報を閲覧できるアプリ\n「インベスゲート」\n50%の人がこのアプリを使って\n取引のコストを削減しました"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btn_start"
            android:layout_margin="10dp"
            style="@style/button_round_blue"
            android:text="はじめる"
            android:background="@drawable/btn_bg_round_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_login"
            android:layout_margin="10dp"
            style="@style/button_round_blue"
            android:background="@drawable/btn_bg_round_blue"
            android:text="すでにアカウントをお持ちの方はこちら"
            android:layout_width="match_parent"
            android:layout_height="36dp" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:src="@mipmap/test_bottom_logo"
        android:layout_height="wrap_content" />
</LinearLayout>