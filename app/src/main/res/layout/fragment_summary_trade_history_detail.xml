<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:background="@drawable/background_1"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="信用買"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="15sp"
                android:background="@drawable/background_1"
                android:textColor="@color/white"
                android:text="BBBB"
                android:id="@+id/txt_trade_each_type"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="40sp"
        android:textColor="@color/background_1"
        android:id="@+id/txt_trade_each_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date time"
        android:textSize="10sp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/background_1"
        android:id="@+id/txt_trade_each_date"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="実現損益 ( 仮 )"
        android:textSize="10sp"
        android:layout_margin="5dp"
        android:textColor="@color/background_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="435"
        android:textSize="40sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/background_1"
        android:id="@+id/txt_trade_each_pl"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手数料( 仮 )"
        android:textSize="10sp"
        android:layout_margin="5dp"
        android:textColor="@color/background_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="435"
        android:textSize="40sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/background_1"
        android:id="@+id/txt_trade_each_commission"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金利 ( 仮 )"
        android:textSize="10sp"
        android:layout_margin="5dp"
        android:textColor="@color/background_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="435"
        android:textSize="40sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/background_1"
        android:id="@+id/txt_trade_each_interest"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_2"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:text="証券 アプリ を 立ち上げる"
        android:id="@+id/btn_trade_each"/>

</LinearLayout>