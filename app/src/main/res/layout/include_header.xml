<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="?attr/colorPrimary"
    android:layout_height="48dp">
    <ImageView
        android:padding="4dp"
        android:id="@+id/btn_header_left"
        android:src="@mipmap/header_back"
        android:scaleType="centerInside"
        android:layout_width="48dp"
        android:layout_alignParentLeft="true"
        android:layout_height="match_parent" />
    <LinearLayout
        android:gravity="center"
        android:paddingLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_header_title"
            android:visibility="visible"
            android:text="SCREEN ABC"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:visibility="gone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:theme="@style/MyEditTextTheme"
                android:paddingRight="30dp"
                android:drawableLeft="@mipmap/search_small"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:id="@+id/edt_search_box"
                android:hint="なにをお探しですか？"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:layout_centerInParent="true"
                android:textColor="@color/bg_white"
                android:textColorHint="@color/bg_white"
                android:textSize="14sp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:padding="3dp"
                android:visibility="invisible"
                android:id="@+id/btn_header_delete"
                android:layout_gravity="right|center_vertical"
                android:src="@mipmap/popup_incorrect"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <View
                android:clickable="true"
                android:id="@+id/btn_header_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:padding="8dp"
        android:id="@+id/btn_header_right"
        android:visibility="invisible"
        android:scaleType="centerInside"
        android:layout_width="48dp"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent" />
</RelativeLayout>
