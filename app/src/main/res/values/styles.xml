<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
    <style name="MainActivityTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">@color/bg_white</item>
        <item name="colorControlActivated">@color/bg_white</item>
        <item name="colorControlHighlight">@color/bg_white</item>
    </style>

    <style name="button_round_blue">
        <item name="android:background">@drawable/btn_bg_round_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="text_backgroup_1">
        <item name="android:background">@drawable/background_1</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text_backgroup_2">
        <item name="android:background">@drawable/background_2</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text_backgroup_3">
        <item name="android:background">@drawable/background_3</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text_backgroup_4">
        <item name="android:background">@drawable/background_4</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="row_spinner">
        <item name="android:layout_margin">15dp</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="row_spinner_text">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="text_1">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/bg_boder_text</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>
