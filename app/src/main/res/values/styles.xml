<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
    <style name="MainActivityTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">@color/bg_white</item>
        <item name="colorControlActivated">@color/bg_white</item>
        <item name="colorControlHighlight">@color/bg_white</item>
    </style>

    <style name="button_round_blue">
        <item name="android:background">@drawable/btn_bg_round_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
